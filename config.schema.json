{
  "pluginAlias": "DigitalStromPlugin",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "digitalSTROM",
        "required": true
      },
      "options": {
        "type": "object",
        "required": true,
        "properties": {
          "dssip": {
            "title": "dSS IP Address",
            "type": "string",
            "required": true,
            "format": "ipv4",
            "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$"
          },
          "token": {
            "title": "dSS API Token",
            "type": "string",
            "required": true,
            "minLength": 1
          },
          "disableCertificateValidation": {
            "title": "Disable Certificate Validation (NOT RECOMMENDED)",
            "type": "boolean",
            "default": false,
            "description": "Only disable for testing. This makes your connection insecure."
          },
          "fingerprint": {
            "title": "dSS Certificate SHA256 Fingerprint",
            "type": "string",
            "required": false,
            "pattern": "^([0-9a-fA-F]{2}:){31}[0-9a-fA-F]{2}$|^[0-9a-fA-F]{64}$",
            "description": "SHA-256 fingerprint in hex format (with or without colons)"
          }
        }
      }
    }
  },
  "footerDisplay": "If you have any suggestions, please open an issue on [GitHub](https://github.com/pa-nic/digitalSTROM/issues)."
}